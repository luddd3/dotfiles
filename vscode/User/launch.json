  "version": "0.2.0",
  "configurations": [
    {
      "name": "Mocha",
      "type": "node",
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "--inspect-brk",
        "--exit",
        "${workspaceFolder}/test/*.spec.js"
      ],
      "env": {
        "NODE_ENV": "test",
        "TZ": "UTC"
      }
    }
  ]
}
